{
  "compilerOptions": {
    "lib": ["dom", "es2017"],
    "target": "es2017",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["./typings/**/*", "./src/**/*"],
  "exclude": ["./node_modules", "./lib", "./cjs"]
}
